upstream django {
    server unix:///run/uwsgi/app/dashboard/socket;
}

server {
    listen      80;
    charset     utf-8;
    client_max_body_size 75M;

    location /templates {
        alias /opt/www/dashboard/templates;
    }

    location /static {
        alias /opt/www/dashboard/static;
    }

    location / {
        uwsgi_pass  django;
        include    /opt/www/dashboard/uwsgi_params;
    }
}

